{
  "name": "cypress-tests-with-allure-reporter",
  "version": "1.0.0",
  "description": "cypress tests with allure reporter",
  "main": "index.js",
  "scripts": {
    "test": "cypress run --spec 'cypress/integration/*' --reporter mocha-allure-reporter",
    "report": "./node_modules/.bin/allure generate allure-results --clean -o allure-report",
    "open": "./node_modules/.bin/cypress open",
    "wipe": "rm -rf allure-results/ allure-report/",

    "clean:reports": "rm -R -f cypress/reports && mkdir cypress/reports && mkdir cypress/reports/mochareports ",
    "pretest": "npm run clean:reports",
    "scripts": "cypress run",
    "report:merge": "mochawesome-merge --reportDir cypress/results/json > cypress/results/mochawesome-bundle.json",
    "report:generate": "marge cypress/results/mochawesome-bundle.json -o cypress/reports/html",
    "report:copyScreenshots": "cp -r cypress/screenshots cypress/results/html/screenshots",
    "precy:run": "rm -rf cypress/screenshots cypress/results cypress/reports"
  },
  "dependencies": {
    "cypress": "^9.3.1",
    "cypress-multi-reporters": "^1.5.0",
    "mocha": "^9.2.0",
    "mocha-allure-reporter": "^1.4.0",
    "mochawesome": "^7.0.1",
    "mochawesome-merge": "^4.2.1",
    "mochawesome-report-generator": "^6.0.1"
  }
}
